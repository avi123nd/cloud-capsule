# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/timecapsule

# JWT Auth
JWT_SECRET=your-jwt-secret-here

# Encryption Key
ENCRYPTION_KEY=your-32-byte-encryption-key-here-must-be-32-chars

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# SMTP / Email Configuration (optional but recommended for notifications)
# If these are not set, email notifications will be skipped safely.
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=no-reply@your-domain.com
EMAIL_FROM_NAME=Time Capsule Cloud
